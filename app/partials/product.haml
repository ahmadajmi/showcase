%div{ng-controller: "productDetails"}

  .row
    .large-12.column
      .loading-spinner{ng-show:"loading"}

  .row
    .large-12.column.text-center{ng-show:"!loading"}
      {{ status }}

  .border-bottom.section{ng-show:"done"}
    .row
      .large-8.column.column--center.text-center
        %img{ng-src: "{{ product.image }}"}

  .border-bottom.section{ng-show:"done"}
    .row
      .large-8.column.column--center
        .text-center
          %h3 {{ product.title }}
        %p
          {{ product.description }}

        .text-center
          %a{href: "#", class: "button button-primary bold"}
            View Supplier Page

  .border-bottom.section{ng-show:"done"}
    .row
      .large-8.column.column--center
        .text-center
          %h4.uppercase.margin-bottom-one.padding-bottom-one Specifications

      .medium-10.large-8.column.column--center
        %ul.list-bare
          %li.border-bottom.padding-bottom-one.margin-bottom-one{ng-repeat: "(specKey, specValue) in product.specs"}
            .row
              .medium-4.large-4.column
                %strong
                  {{ specKey }}
              .medium-8.large-8.column
                {{ specValue }}

  .section{ng-show:"done"}
    .row
      .large-8.column.column--center
        .text-center
          %h4.uppercase.margin-bottom-one.padding-bottom-one Related Products

    .row
      .product-container.clearfix
        .small-12.large-4.medium-6.column.product-card{ng-repeat: "product in product.related"}
          %product-card