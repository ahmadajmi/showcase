%div{ng-controller: "brandDetails"}

  .row
    .large-12.column
      .loading-spinner{ng-show:"loading"}

  .row
    .large-12.column.text-center{ng-show:"!loading"}
      {{ status }}

  .row{ng-show:"done"}
    .large-8.column.column--center.text-center
      .row
        .small-4.medium-4.large-4.column.column--center.text-center
          .flex-embed.flex-embed--16by9
            %img.flex-embed__object{ng-src: "{{ brand.logo }}"}

      %h4
        {{ brand.name }}

      %p.text-center
        {{ brand.description }}

